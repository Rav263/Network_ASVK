CC=g++
CPPFLAGS=-std=gnu++17 -O3
LDFLAGS=
SOURCES_SERVER=server_2.cpp logs.cpp
SOURCES_CLIENT=client_2.cpp logs.cpp
BUILD_DIRRECTORY=build
EXECUTABLE_SERVER=server
EXECUTABLE_CLIENT=client

all: $(SOURCES_SERVER) $(SOURCES_CLIENT) $(EXECUTABLE_SERVER) $(EXECUTABLE_CLIENT)

$(EXECUTABLE_SERVER): $(SOURCES_SERVER)
	$(CC) $(LDFLAGS) $(SOURCES_SERVER) -o $@

$(EXECUTABLE_CLIENT): $(OBJECTS_CLIENT)
	$(CC) $(LDFLSGS) $(SOURCES_CLIENT) -o $@

clear:
	rm server client

